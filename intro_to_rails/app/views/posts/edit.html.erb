<h1>Edit <%= @post.title %></h1>
<ul>
  <%= form_for [@post.category, @post] do |f| %>
    <li>
      <%= f.label :category_id, "Category" %>
      <%= f.select :category_id, @categories %>
    </li>
    <li>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </li>
    <li>
      <%= f.label :body %>
      <%= f.text_area :body  %>
    </li>
    <li>
      <%= f.submit %>
    </li>
  <% end %>
</ul>
