<h1>create a new post</h1>
<ul>
  <%= form_for @post do |f| %>
    <li>
      <%= label_tag :category %>
      <%= text_field_tag :category %>
    </li>
    <li>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </li>
    <li>
      <%= f.label :body %>
      <%= f.text_area :body  %>
    </li>
    <li>
      <%= f.submit %>
    </li>
  <% end %>
</ul>
